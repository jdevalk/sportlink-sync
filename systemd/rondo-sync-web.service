[Unit]
Description=Rondo Sync Dashboard Web Server
After=network.target

[Service]
Type=simple
User=rondo
Group=rondo
WorkingDirectory=/home/rondo
ExecStart=/usr/bin/node /home/rondo/lib/web-server.js
Restart=on-failure
RestartSec=10
StartLimitBurst=5
StartLimitIntervalSec=300
StandardOutput=journal
StandardError=journal
SyslogIdentifier=rondo-sync-web

# Security hardening (INFRA-04: non-root, minimal permissions)
NoNewPrivileges=true
PrivateTmp=true

# Environment
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
